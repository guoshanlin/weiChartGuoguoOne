/* pages/exhibition/exhibition.wxss */
.container {padding: 100rpx 0;}
.search-wrapper{position: fixed;top: 0;left: 0;z-index: 99;display:flex;flex-direction:row;padding:6px 10px;width: calc( 100% - 20px );}
.search-wrapper .search-img{width:34rpx;height:34rpx;vertical-align:middle;margin: -2px 5px 0 0;}
.search-wrapper .search-view{background:#f6f6f6;flex:1;font-size:12px;text-align:center;height: 34px;line-height: 34px;border-radius:3px;color:#bfbfbf;}

.common-list{padding: 16rpx 24rpx;}
.common-list .list-item{margin-bottom: 8px;width: 345rpx;border-radius: 3px;float: left;box-shadow: 0 0 1px 0 #ddd;overflow: hidden;}
.common-list .list-item:nth-child(2n+1){margin-right: 12rpx;}
.common-list .list-item .img{ width: 100%; height: 220rpx;}
.common-list .list-item .name{padding: 0 6px;line-height: 40rpx;min-height: 40rpx}
.common-list .list-item .tools{padding: 2px 6px 2px;}