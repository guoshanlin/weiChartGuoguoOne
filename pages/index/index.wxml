<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">头像昵称</button>
    <block wx:else>
      <image data-url="../logs/logs" bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto" data-url="../scrollableTabView/index" bindtap="bindViewTap">{{name}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto" data-url="../swiper/index" bindtap="bindViewTap">轮播图</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <my-component testName="{{testName}}"></my-component>
</view>
